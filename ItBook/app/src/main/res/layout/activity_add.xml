<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_fanhuiAdd"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/zuojiantou"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="添加书籍信息"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="书名："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edt_addBookName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#BFBFBF"
                android:hint="请输入书名"
                android:textColor="#000"
                android:background="@drawable/bg_edit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="书图："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edt_addBookimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#BFBFBF"
                android:hint="请输入书图"
                android:textColor="#000"

                android:background="@drawable/bg_edit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="作者："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edt_addBookAuthor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#BFBFBF"
                android:textColor="#000"

                android:hint="请输入作者"
                android:background="@drawable/bg_edit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="详情："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edt_addBookInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#BFBFBF"
                android:hint="请输入详情"
                android:textColor="#000"

                android:background="@drawable/bg_edit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="链接："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edt_addBookLianjie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#BFBFBF"
                android:hint="请输入下载链接"
                android:textColor="#000"

                android:background="@drawable/bg_edit"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonstyle"
        android:layout_gravity="center"/>

</LinearLayout>